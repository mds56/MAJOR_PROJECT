<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/logoback"
    android:layout_height="match_parent">






    <TextView
        android:id="@+id/txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Analysing your stage...."
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        ></TextView>
    <!--on below line we are creating progress bar-->
    <ProgressBar
        android:id="@+id/dPBLoading"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="#000000" />

    <TextView
        android:id="@+id/txt_stgs"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
         android:layout_marginTop="250dp"
   android:layout_centerHorizontal="true"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Current Stage:"
        android:textColor="@color/teal_200"
        android:textSize="50sp"
        android:visibility="invisible"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_stg"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
     android:layout_marginTop="40dp"
        android:layout_below="@+id/txt_stgs"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text=""
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:visibility="invisible"
        android:textStyle="bold" />

    <Button
        android:id="@+id/homs"
        style="@style/Button"
        android:layout_width="150dp"
        android:layout_height="70dp"

       android:layout_alignParentBottom="true"
        android:background="@drawable/btn_start"
        android:onClick="onClick"
       android:layout_marginBottom="90dp"
    android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="Home"
        android:textSize="40dp"
        android:visibility="invisible"
        android:textColor="#000" />


    <Button
        android:id="@+id/exits"
        style="@style/Button"
        android:layout_width="150dp"
        android:layout_height="70dp"

        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_start"
        android:onClick="onClick"
        android:layout_marginBottom="90dp"
     android:layout_alignParentRight="true"
       android:layout_marginRight="40dp"
        android:text="Exit"
        android:textSize="40dp"
        android:visibility="invisible"
        android:textColor="#000" />
</RelativeLayout>